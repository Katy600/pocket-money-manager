
<% if @parent.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@parent.errors.count, "error") %> prevented your regsitration from being completed:</h2>

    <ul>
    <% @parent.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@parent) do
    |f| %>

<table>
  <tr>
    <th>First name</th>
    <td><%= f.text_field(:first_name) %></td>
  </tr>
  <tr>
    <th>Last name </th>
    <td><%= f.text_field(:last_name) %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= f.text_field(:email) %></td>
  </tr>
  <tr>
    <th>Password</th>
    <td><%= f.password_field(:password) %></td>
  </tr>
</table>

<%= f.submit("Submit") %>
<% end %>
