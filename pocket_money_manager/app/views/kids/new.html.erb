<%= link_to("Back to main menu", parents_path(:parent_id => @parent.id)), :class => 'back-link') %>

<% if @kid.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@kid.errors.count, "error") %> prevented your registration from being completed:</h2>

    <ul>
    <% @kid.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@kid, :url => kids_path(:parent_id => @parent.id)) do
    |f| %>

<table>
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Username </th>
    <td><%= f.text_field(:username) %></td>
  </tr>
  <tr>
    <th>Balance</th>
    <td><%= f.text_field(:balance) %></td>
  </tr>
  <tr>
    <th>Password</th>
    <td><%= f.password_field(:password) %></td>
  </tr>
</table>

<%= f.submit("Submit") %>
<% end %>
