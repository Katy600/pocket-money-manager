<% if @child.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@child.errors.count, "error") %> prevented your registration from being completed:</h2>

    <ul>
    <% @child.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@child, :url => children_path(:parent_id => @parent.id)) do
    |f| %>

<table>
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Parent</th>
    <td><%= f.object.parent.first_name %></td>
  </tr>

  <tr>
    <th>Username </th>
    <td><%= f.text_field(:username) %></td>
  </tr>
  <tr>
    <th>Balance</th>
    <td><%= f.text_field(:balance) %></td>
  </tr>
  <tr>
    <th>Password</th>
    <td><%= f.password_field(:password) %></td>
  </tr>
</table>

<%= f.submit("Submit") %>
<% end %>
